{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"outDir": "./build",
		"baseUrl": "./src",
		"paths": {
			"@/*": [
				"./modules/*"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"migrations/**/*.ts",
		"dev/types/**/*.d.ts"
	]
}